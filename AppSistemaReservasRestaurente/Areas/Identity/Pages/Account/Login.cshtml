@page
@model LoginModel
@{
    ViewData["Title"] = "Iniciar Sesion";
}

<style>
    /* Panel de Mesas adaptado a Login/Register */
    .custom-panel-mesas {
        background-color: rgba(19, 15, 90, 0.35);
        backdrop-filter: blur(6px);
        border-radius: 15px;
        padding: 2rem;
        margin: 2rem auto;
        box-shadow: 0 0 25px rgba(0, 0, 0, 0.6);
        font-weight: bold;
    }

    .small-panel {
        max-width: 700px; /* 👈 mismo tamaño que los CRUDs */
        margin: 2rem auto;
    }
</style>

<div class="custom-panel-mesas small-panel">
    <h1 class="text-center text-light">@ViewData["Title"]</h1>

    <form id="account" method="post">
        
        <hr />

        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

        <div class="form-floating mb-3">
            <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="name@example.com" />
            <label asp-for="Input.Email">Email</label>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" placeholder="password" />
            <label asp-for="Input.Password">Password</label>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>

        <div class="checkbox mb-3">
            <label>
                <input class="form-check-input" asp-for="Input.RememberMe" /> @Html.DisplayNameFor(m => m.Input.RememberMe)
            </label>
        </div>

        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Ingresar</button>

        <div class="mt-3 text-center text-light">
            <p><a asp-page="./ForgotPassword"> Te olvidaste tu contraseña?</a></p>
            <p><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrar nuevo usuario</a></p>
            @* <p><a asp-page="./ResendEmailConfirmation">Resend email confirmation</a></p> *@
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
