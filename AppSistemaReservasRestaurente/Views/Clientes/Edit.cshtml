@model AppSistemaReservasRestaurente.Models.Cliente

@{
    ViewData["Title"] = "Editar Cliente";
}

<div class="custom-panel-clientes small-panel">
    <h2 class="text-light text-center">✏️ Editar Cliente</h2>
    <hr />
    <form asp-action="Edit">
        <input type="hidden" asp-for="ID_Cliente" />

        <div class="form-group">
            <label asp-for="Nombre_Cliente" class="control-label text-light"></label>
            <input asp-for="Nombre_Cliente" class="form-control" />
            <span asp-validation-for="Nombre_Cliente" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Telefono" class="control-label text-light"></label>
            <input asp-for="Telefono" class="form-control" />
            <span asp-validation-for="Telefono" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DNI" class="control-label text-light"></label>
            <input asp-for="DNI" class="form-control" />
            <span asp-validation-for="DNI" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Id" class="control-label text-light">Usuario</label>
            <select asp-for="Id" class="form-control" asp-items="ViewBag.Id"></select>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">💾 Guardar</button>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
