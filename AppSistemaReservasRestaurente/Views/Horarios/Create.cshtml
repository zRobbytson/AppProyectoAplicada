@model AppSistemaReservasRestaurente.Models.Horario

@{
    ViewData["Title"] = "Crear Horario";
}

<div class="custom-container">
    <div class="custom-panel-horarios-crud mx-auto">
        <h2 class="text-white text-center mb-3">➕ Crear Horario</h2>
        <hr class="text-light" />

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <label asp-for="Hora_Inicio" class="form-label text-white fw-bold"></label>
                <input asp-for="Hora_Inicio" class="form-control" />
                <span asp-validation-for="Hora_Inicio" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Hora_Final" class="form-label text-white fw-bold"></label>
                <input asp-for="Hora_Final" class="form-control" />
                <span asp-validation-for="Hora_Final" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-light fw-bold">⬅️ Volver</a>
                <input type="submit" value="✅ Crear" class="btn btn-success fw-bold" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<!-- 🎨 ESTILOS -->
<style>
    /* Panel CRUD específico */
    .custom-panel-horarios-crud {
        max-width: 500px;
        background-color: rgba(19, 15, 90, 0.35);
        backdrop-filter: blur(6px);
        border-radius: 15px;
        padding: 2rem;
        margin-top: 2rem;
        box-shadow: 0 0 25px rgba(0, 0, 0, 0.6);
        font-weight: bold;
    }

        .custom-panel-horarios-crud h2 {
            font-weight: bold;
        }

        /* Input */
        .custom-panel-horarios-crud .form-control {
            background-color: rgba(255, 255, 255, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.3);
            color: white;
        }

            .custom-panel-horarios-crud .form-control:focus {
                background-color: rgba(255, 255, 255, 0.15);
                border-color: #4e84ff;
                color: white;
                box-shadow: 0 0 10px rgba(78, 132, 255, 0.5);
            }

        /* Botones */
        .custom-panel-horarios-crud .btn {
            border-radius: 10px;
            padding: 0.5rem 1.2rem;
            box-shadow: 0 0 8px rgba(0, 0, 0, 0.3);
            transition: all 0.3s;
        }

            .custom-panel-horarios-crud .btn:hover {
                transform: scale(1.05);
            }
</style>
