@model AppSistemaReservasRestaurente.Models.Horario

@{
    ViewData["Title"] = "Detalles del Horario";
}

<div class="gestion-panel">
    <h2 class="custom-title text-light">Detalles del Horario</h2>

    
        <dl class="row text-white-50">
            <dt class="col-sm-3 text-white">Hora de Inicio</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Hora_Inicio)</dd>

            <dt class="col-sm-3 text-white">Hora Final</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Hora_Final)</dd>
        </dl>

        <div class="mt-4 text-center">
            <a asp-action="Edit" asp-route-id="@Model?.ID_Horario" class="btn btn-warning btn-lg">Editar</a> |
            <a asp-action="Index2" class="btn btn-secondary btn-lg">Volver a la Lista</a>
        </div>
    
</div>
