@model AppSistemaReservasRestaurente.Models.Horario

@{
    ViewData["Title"] = "Editar Horario";
}

<div class="gestion-panel">
    <h2 class="custom-title text-light">Editar Horario</h2>

    
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID_Horario" />

            <div class="form-group mb-3">
                <label asp-for="Hora_Inicio" class="form-label-custom text-light">Hora de Inicio</label>
                <input asp-for="Hora_Inicio" class="form-control input-custom" />
                <span asp-validation-for="Hora_Inicio" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Hora_Final" class="form-label-custom text-light">Hora Final</label>
                <input asp-for="Hora_Final" class="form-control input-custom" />
                <span asp-validation-for="Hora_Final" class="text-danger"></span>
            </div>

            <div class="text-center mt-4">
                <input type="submit" value="Guardar" class="btn btn-primary btn-lg" /> |
                <a asp-action="Index2" class="btn btn-secondary btn-lg">Volver a la Lista</a>
            </div>
        </form>
    
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
