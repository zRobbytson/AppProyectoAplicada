    <script>
        let mesaSeleccionada = null;
        let horaSeleccionada = null;
        let celdaSeleccionada = null;

        // Datos de ejemplo para las reservas
        const reservas = {
            '11:00-2': { nombre: 'Agusto', personas: 3, telefono: '123456789', email: 'agusto@email.com', codigo: '00123', estado: 'completado' },
            '11:30-1': { nombre: 'Valeria', personas: 2, telefono: '987654321', email: 'valeria@email.com', codigo: '00124', estado: 'completado' },
            '11:30-2': { nombre: 'Agusto', personas: 3, telefono: '123456789', email: 'agusto@email.com', codigo: '00125', estado: 'completado' },
            '11:30-6': { nombre: 'Diego', personas: 5, telefono: '456789123', email: 'diego@email.com', codigo: '00126', estado: 'pendiente' },
            '11:30-8': { nombre: 'Diego', personas: 5, telefono: '456789123', email: 'diego@email.com', codigo: '00127', estado: 'pendiente' },
            '12:00-1': { nombre: 'Valeria', personas: 2, telefono: '987654321', email: 'valeria@email.com', codigo: '00128', estado: 'completado' },
            '12:00-6': { nombre: 'Diego', personas: 5, telefono: '456789123', email: 'diego@email.com', codigo: '00129', estado: 'pendiente' },
            '12:00-8': { nombre: 'Diego', personas: 5, telefono: '456789123', email: 'diego@email.com', codigo: '00130', estado: 'pendiente' },
            '12:30-8': { nombre: 'Diego', personas: 5, telefono: '456789123', email: 'diego@email.com', codigo: '00131', estado: 'pendiente' },
            '1:00-2': { nombre: 'Auron Novoa', personas: 4, telefono: '974108486', email: 'auron.ab@gmail.com', codigo: '00156', estado: 'pendiente' },
            '1:30-2': { nombre: 'Auron Novoa', personas: 4, telefono: '974108486', email: 'auron.ab@gmail.com', codigo: '00157', estado: 'pendiente' },
            '1:30-5': { nombre: 'Roselly', personas: 3, telefono: '321654987', email: 'roselly@email.com', codigo: '00158', estado: 'pendiente' }
        };

        function seleccionarMesa(elemento, hora, mesa) {
            // Remover selección anterior
            if (celdaSeleccionada) {
                celdaSeleccionada.classList.remove('mesa-seleccionado');
                // Restaurar clase original basada en el contenido
                const contenido = celdaSeleccionada.textContent.trim();
                if (contenido === 'Libre') {
                    celdaSeleccionada.className = 'mesa-libre';
                } else {
                    const key = horaSeleccionada + '-' + mesaSeleccionada;
                    const reserva = reservas[key];
                    if (reserva) {
                        if (reserva.estado === 'completado') {
                            celdaSeleccionada.className = 'mesa-completado';
                        } else if (reserva.estado === 'pendiente') {
                            celdaSeleccionada.className = 'mesa-pendiente';
                        } else if (reserva.estado === 'no-asistio') {
                            celdaSeleccionada.className = 'mesa-no-asistio';
                        }
                    }
                }
            }

            // Nueva selección
            elemento.classList.add('mesa-seleccionado');
            celdaSeleccionada = elemento;
            mesaSeleccionada = mesa;
            horaSeleccionada = hora;
            
            // Habilitar botón de detalles
            document.getElementById('verDetallesBtn').disabled = false;
        }

        function mostrarDetalles() {
            if (!mesaSeleccionada || !horaSeleccionada) return;

            const key = horaSeleccionada + '-' + mesaSeleccionada;
            const reserva = reservas[key];
            const zona = document.getElementById('zonaSelector').options[document.getElementById('zonaSelector').selectedIndex].text;

            // Actualizar información en el modal
            document.getElementById('modalMesa').textContent = 'Mesa ' + mesaSeleccionada;
            document.getElementById('modalHora').textContent = horaSeleccionada;
            
            if (reserva) {
                document.getElementById('modalNombre').textContent = reserva.nombre;
                document.getElementById('modalPersonas').textContent = reserva.personas;
                document.getElementById('modalTelefono').textContent = reserva.telefono;
                document.getElementById('modalEmail').textContent = reserva.email;
                document.getElementById('modalCodigo').textContent = reserva.codigo;
                
                const estadoBadge = document.getElementById('modalEstado');
                estadoBadge.className = 'status-badge status-' + reserva.estado;
                estadoBadge.textContent = reserva.estado === 'completado' ? 'Completado' : 
                                        reserva.estado === 'pendiente' ? 'Pendiente' : 'No Asistió';
            } else {
                // Mesa libre
                document.getElementById('modalNombre').textContent = 'Sin reserva';
                document.getElementById('modalPersonas').textContent = '0';
                document.getElementById('modalTelefono').textContent = '-';
                document.getElementById('modalEmail').textContent = '-';
                document.getElementById('modalCodigo').textContent = '-';
                
                const estadoBadge = document.getElementById('modalEstado');
                estadoBadge.className = 'status-badge bg-light text-dark';
                estadoBadge.textContent = 'Libre';
            }
            
            document.getElementById('modalZona').textContent = zona;
            document.getElementById('modalOverlay').style.display = 'block';
        }

        function cerrarModal() {
            document.getElementById('modalOverlay').style.display = 'none';
        }

        function cambiarEstado(nuevoEstado) {
            if (!mesaSeleccionada || !horaSeleccionada) return;
            
            const key = horaSeleccionada + '-' + mesaSeleccionada;
            
            if (nuevoEstado === 'completado') {
                celdaSeleccionada.className = 'mesa-completado';
                if (reservas[key]) {
                    reservas[key].estado = 'completado';
                }
                alert('Reserva marcada como completada');
            } else if (nuevoEstado === 'no-asistio') {
                celdaSeleccionada.className = 'mesa-no-asistio';
                if (reservas[key]) {
                    reservas[key].estado = 'no-asistio';
                }
                alert('Reserva marcada como "No asistió"');
            }
            
            cerrarModal();
        }

        function editarReserva() {
            alert('Función de editar reserva - Aquí se abriría un formulario de edición');
            cerrarModal();
        }

        function borrarReserva() {
            if (confirm('¿Está seguro de que desea borrar esta reserva?')) {
                const key = horaSeleccionada + '-' + mesaSeleccionada;
                delete reservas[key];
                celdaSeleccionada.className = 'mesa-libre';
                celdaSeleccionada.textContent = 'Libre';
                alert('Reserva borrada exitosamente');
                cerrarModal();
            }
        }

        function actualizarHorarios() {
            const fecha = document.getElementById('fechaSelector').value;
            const zona = document.getElementById('zonaSelector').value;
            alert('Actualizando horarios para la fecha: ' + fecha + ' y zona: ' + zona);
            // Aquí iría la lógica para actualizar los datos
        }

        function salir() {
            if (confirm('¿Está seguro de que desea salir?')) {
                window.location.href = '/'; // Redirigir a la página principal
            }
        }

