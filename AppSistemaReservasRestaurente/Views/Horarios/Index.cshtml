
@model IEnumerable<AppSistemaReservasRestaurente.Models.Reserva>

@{
    ViewData["Title"] = "Horario de Reservas";
}

<h2>Horario de Reservas</h2>

<form method="get" asp-action="Index">
    <div class="form-group mb-3">
        <label>Seleccionar fecha:</label>
        <input type="date" name="fecha" value="@DateTime.Today.ToString("yyyy-MM-dd")" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label>Zona:</label>
        <select name="zona" class="form-control">
            <option value="">-- Todas --</option>
            <option value="Salón principal">Salón Principal</option>
            <option value="Terraza">Terraza</option>
            <option value="Balcón">Balcón</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Filtrar</button>
</form>

<hr />

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Mesa</th>
            <th>Zona</th>
            <th>Horario</th>
            <th>Cliente</th>
            <th>Personas</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var reserva in Model)
        {
            string color = reserva.Estado switch
            {
                "Confirmada" => "background-color: lightblue; color: black;",
                "Completada" => "background-color: blue; color: white;",
                "No asistió" => "background-color: yellow; color: black;",
                _ => "background-color: lightgray; color: black;"
            };

            <tr style="@color">
                <td>@reserva.Mesa?.Numero</td>
                <td>@reserva.Mesa?.Zona</td>
                <td>@reserva.Horario?.HoraInicio - @reserva.Horario?.HoraFin</td>
                <td>@reserva.Cliente?.Nombre</td>
                <td>@reserva.NumPersonas</td>
                <td>@reserva.Estado</td>
                <td>
                    <button class="btn btn-info btn-sm ver-detalles" data-id="@reserva.ReservaId">Ver detalles</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Modal -->
<div class="modal fade" id="modalDetalles" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalLabel">Detalles de la Reserva</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body" id="modalBody">
                <!-- Aquí cargaremos con AJAX -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $(".ver-detalles").click(function () {
                var id = $(this).data("id");
                $.get("/Horarios/Detalles/" + id, function (data) {
                    $("#modalBody").html(data);
                    $("#modalDetalles").modal("show");
                });
            });
        });
    </script>
}