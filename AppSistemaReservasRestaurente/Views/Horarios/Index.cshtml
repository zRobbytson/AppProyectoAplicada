    <script>
        let selectedCell = null;
        let selectedTable = null;
        let selectedTime = null;

        // Datos de ejemplo para las reservas
        const reservationsData = {
            '2-11:00': {
                name: 'Agusto',
                people: 3,
                phone: '987654321',
                email: 'agusto@gmail.com',
                code: '00154',
