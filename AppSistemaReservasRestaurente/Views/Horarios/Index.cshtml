            },
            '2-13:00': {
                name: 'Auron Novoa',
                people: 4,
                phone: '974108486',
                email: 'auron.ab@gmail.com',
                code: '00156',
                status: 'pendiente'
            },
            '6-11:30': {
                name: 'Diego',
                people: 2,
                phone: '956789123',
                email: 'diego@gmail.com',
                code: '00157',
                status: 'pendiente'
            }
        };

        // Event listeners para las celdas de la tabla
        document.addEventListener('DOMContentLoaded', function() {
            const tableCells = document.querySelectorAll('td[data-table]');
            const viewDetailsBtn = document.getElementById('viewDetailsBtn');
            const modal = document.getElementById('reservationModal');
            const closeBtn = document.querySelector('.close');

            // Selección de celdas
            tableCells.forEach(cell => {
                cell.addEventListener('click', function() {
                    // Remover selección anterior
                    if (selectedCell) {
                        selectedCell.classList.remove('selected-cell');
                    }

                    // Seleccionar nueva celda
                    selectedCell = this;
                    selectedTable = this.getAttribute('data-table');
                    selectedTime = this.getAttribute('data-time');

                    this.classList.add('selected-cell');
                    viewDetailsBtn.disabled = false;
                });
            });

            // Mostrar modal de detalles
            viewDetailsBtn.addEventListener('click', function() {
                if (selectedTable && selectedTime) {
                    showReservationDetails(selectedTable, selectedTime);
                    modal.style.display = 'block';
                }
            });

            // Cerrar modal
            closeBtn.addEventListener('click', function() {
                modal.style.display = 'none';
            });

            window.addEventListener('click', function(event) {
                if (event.target === modal) {
                    modal.style.display = 'none';
                }
            });

            // Botones del modal
            document.getElementById('completarBtn').addEventListener('click', function() {
                changeReservationStatus('completado');
            });

            document.getElementById('noAsistioBtn').addEventListener('click', function() {
                changeReservationStatus('no-asistio');
            });

            document.getElementById('editarBtn').addEventListener('click', function() {
                alert('Funcionalidad de editar - Próximamente implementada en el controlador');
            });

            document.getElementById('borrarBtn').addEventListener('click', function() {
                if (confirm('¿Está seguro de que desea borrar esta reserva?')) {
                    changeReservationStatus('libre');
                }
            });

            // Cambio de zona - Aquí conectarás con el controlador
            document.getElementById('zoneSelect').addEventListener('change', function() {
                // TODO: Implementar en el controlador
                // window.location.href = '@Url.Action("Index", "Horarios")?zona=' + this.value;
                alert('Cambiando a zona: ' + this.options[this.selectedIndex].text + '\n(Se implementará en el controlador)');
            });

            // Cambio de fecha - Aquí conectarás con el controlador
            document.getElementById('dateInput').addEventListener('change', function() {
                // TODO: Implementar en el controlador
                // window.location.href = '@Url.Action("Index", "Horarios")?fecha=' + this.value;
                alert('Cambiando a fecha: ' + this.value + '\n(Se implementará en el controlador)');
            });
        });

        function showReservationDetails(table, time) {
            const key = `${table}-${time}`;
            const reservation = reservationsData[key];

            document.getElementById('modalTable').textContent = `Mesa ${table}`;
            document.getElementById('modalTime').textContent = convertTime(time);

            if (reservation) {
                document.getElementById('modalStatus').textContent = getStatusText(reservation.status);
                document.getElementById('modalDescription').textContent = `Mesa Reservada por ${reservation.name}`;
                document.getElementById('modalPeople').textContent = reservation.people;
                document.getElementById('modalPhone').textContent = reservation.phone;
                document.getElementById('modalEmail').textContent = reservation.email;
                document.getElementById('modalCode').textContent = reservation.code;
            } else {
                // Datos por defecto para celdas libres
                document.getElementById('modalStatus').textContent = 'Libre';
                document.getElementById('modalDescription').textContent = 'Mesa disponible';
                document.getElementById('modalPeople').textContent = '-';
                document.getElementById('modalPhone').textContent = '-';
                document.getElementById('modalEmail').textContent = '-';
                document.getElementById('modalCode').textContent = '-';
            }

            document.getElementById('modalZone').textContent = document.getElementById('zoneSelect').options[document.getElementById('zoneSelect').selectedIndex].text;
        }

        function changeReservationStatus(newStatus) {
            if (selectedCell) {
                // Remover clases de estado anteriores
                selectedCell.classList.remove('libre', 'pendiente', 'completado', 'no-asistio', 'seleccionado');

                // Aplicar nuevo estado
                selectedCell.classList.add(newStatus);

                // Actualizar texto de la celda
                if (newStatus === 'libre') {
                    selectedCell.textContent = 'Libre';
                } else if (newStatus === 'completado') {
                    // Mantener el nombre pero cambiar el estilo
                    selectedCell.classList.add('completado');
                } else if (newStatus === 'no-asistio') {
                    selectedCell.classList.add('no-asistio');
                }

                // Cerrar modal
                document.getElementById('reservationModal').style.display = 'none';

                // Actualizar datos de reserva
                const key = `${selectedTable}-${selectedTime}`;
                if (reservationsData[key]) {
                    reservationsData[key].status = newStatus;
                }

                // TODO: Aquí harás la llamada AJAX al controlador
                // updateReservationStatusAjax(selectedTable, selectedTime, newStatus);

                alert(`Estado de la reserva actualizado a: ${getStatusText(newStatus)}\n(La actualización en BD se implementará en el controlador)`);
            }
        }

        function getStatusText(status) {
            const statusMap = {
                'libre': 'Libre',
                'pendiente': 'Pendiente',
