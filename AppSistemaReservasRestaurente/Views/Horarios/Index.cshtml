<script>
    document.addEventListener('DOMContentLoaded', function() {
        let selectedTimeSlot = null;
        let selectedMesa = null;
        let selectedDate = '2025-08-05';

        // Función para cargar horarios desde el servidor
        function cargarHorarios(fecha) {
            const loadingIndicator = document.getElementById('loadingIndicator');
            const scheduleTable = document.getElementById('scheduleTable');

            // Mostrar indicador de carga
            loadingIndicator.style.display = 'block';
            scheduleTable.style.display = 'none';

            // Llamada AJAX al controlador
            fetch(`@Url.Action("GetHorarios", "Horarios")?fecha=${fecha}`)
                .then(response => response.json())
                .then(data => {
                    actualizarTablaHorarios(data);
                    loadingIndicator.style.display = 'none';
                    scheduleTable.style.display = 'block';
                })
                .catch(error => {
                    console.error('Error al cargar horarios:', error);
                    loadingIndicator.style.display = 'none';
                    scheduleTable.style.display = 'block';
                    alert('Error al cargar los horarios. Por favor, intente nuevamente.');
                });
        }

        // Función para actualizar la tabla con los nuevos datos
        function actualizarTablaHorarios(horarios) {
            const tbody = document.querySelector('.schedule-table tbody');

            // Limpiar la tabla actual
            tbody.innerHTML = '';

            // Horarios base (puedes ajustar según tus necesidades)
            const horariosBase = [
                '11:00', '11:30', '12:00', '12:30', '13:00',
                '13:30', '14:00', '14:30', '15:00', '15:30', '16:00', '16:30'
            ];

            // Mesas disponibles
            const mesas = [1, 2, 3, 4, 8];

            // Generar filas de la tabla
            horariosBase.forEach(hora => {
                const row = document.createElement('tr');

                // Celda de hora
                const timeCell = document.createElement('td');
                timeCell.className = 'time-slot';
                timeCell.textContent = hora;
                row.appendChild(timeCell);

                // Celdas de mesas
                mesas.forEach(mesa => {
                    const cell = document.createElement('td');
                    cell.setAttribute('data-mesa', mesa);
                    cell.setAttribute('data-hora', hora);

                    // Buscar el estado de esta mesa y hora en los datos recibidos
                    const reserva = horarios.find(h =>
                        h.mesa == mesa &&
                        h.hora === hora
                    );

                    if (reserva) {
                        // Mesa ocupada o reservada
                        cell.className = `status-${reserva.estado.toLowerCase()}`;
                        cell.textContent = reserva.estado;
                    } else {
                        // Mesa libre
                        cell.className = 'status-libre';
                        cell.textContent = 'Libre';
                    }

                    row.appendChild(cell);
                });

                tbody.appendChild(row);
            });

            // Re-aplicar event listeners a las nuevas celdas
            aplicarEventListeners();
        }

        // Función para aplicar event listeners a las celdas
        function aplicarEventListeners() {
            selectedTimeSlot = null;
            selectedMesa = null;

            const availableSlots = document.querySelectorAll('.status-libre');
            availableSlots.forEach(slot => {
                slot.addEventListener('click', function() {
                    // Remover selección anterior
                    availableSlots.forEach(s => {
                        s.style.backgroundColor = '';
                        s.style.color = '';
                    });

                    // Agregar selección actual
                    this.style.backgroundColor = '#007bff';
                    this.style.color = 'white';

                    selectedTimeSlot = this.dataset.hora;
                    selectedMesa = this.dataset.mesa;

                    // Activar botón de agregar reserva
                    updateAgregarReservaButton();

                    console.log(`Mesa ${selectedMesa} seleccionada para las ${selectedTimeSlot}`);
                });
            });
        }

        // Event listener para el input de fecha
        const dateInput = document.getElementById('selectedDate');
        dateInput.addEventListener('change', function() {
            selectedDate = this.value;
        });

        // Event listener para el botón de buscar
        const buscarBtn = document.getElementById('buscarBtn');
        buscarBtn.addEventListener('click', function() {
            if (selectedDate) {
                cargarHorarios(selectedDate);
            } else {
                alert('Por favor seleccione una fecha');
            }
        });

        // Función para activar/desactivar el botón de agregar reserva
        function updateAgregarReservaButton() {
            const agregarBtn = document.getElementById('agregarReservaBtn');
            if (selectedTimeSlot && selectedMesa) {
                agregarBtn.style.opacity = '1';
                agregarBtn.style.pointerEvents = 'auto';
       
               
            } else {
                agregarBtn.style.opacity = '0.5';
                agregarBtn.style.pointerEvents = 'none';
            }
        }

