@model AppSistemaReservasRestaurente.Models.Mesa

@{
    ViewData["Title"] = "Crear Mesa";
}

<div class="custom-panel-mesas small-panel">
    <h2 class="text-light text-center">➕ Crear Nueva Mesa</h2>
    <hr />
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Capacidad" class="control-label text-light"></label>
            <input asp-for="Capacidad" class="form-control" />
            <span asp-validation-for="Capacidad" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Zona" class="control-label text-light"></label>
            <input asp-for="Zona" class="form-control" />
            <span asp-validation-for="Zona" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">💾 Guardar</button>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
