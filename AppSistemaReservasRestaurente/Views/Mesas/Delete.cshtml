@model AppSistemaReservasRestaurente.Models.Mesa

@{
    ViewData["Title"] = "Eliminar Mesa";
}

<div class="custom-panel-mesas small-panel">
    <h2 class="text-light text-center">🗑️ Eliminar Mesa</h2>
    <p class="text-warning text-center">¿Seguro que deseas eliminar esta mesa?</p>
    <hr />

    <dl class="row text-light">
        <dt class="col-sm-2">Capacidad</dt>
        <dd class="col-sm-10">@Model.Capacidad</dd>
        <dt class="col-sm-2">Zona</dt>
        <dd class="col-sm-10">@Model.Zona</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ID_Mesa" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
