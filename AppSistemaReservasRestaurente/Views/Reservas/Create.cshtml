@model AppSistemaReservasRestaurente.Models.Reserva

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <h2>Hacer una Reserva</h2>

    <form asp-action="Create" asp-controller="Reservas" method="post">
        <div class="row">
            <!-- Cliente -->
            <div class="col-md-4">
                <label asp-for="ClienteId" class="form-label"></label>
                <select asp-for="ClienteId" class="form-select" asp-items="ViewBag.Clientes"></select>
            </div>

            <!-- Zona/Mesa -->
            <div class="col-md-4">
                <label asp-for="MesaId" class="form-label"></label>
                <select asp-for="MesaId" class="form-select" asp-items="ViewBag.Mesas"></select>
            </div>

            <!-- Horario -->
            <div class="col-md-4">
                <label asp-for="HorarioId" class="form-label"></label>
                <select asp-for="HorarioId" class="form-select" asp-items="ViewBag.Horarios"></select>
            </div>
        </div>

        <div class="row mt-3">
            <!-- Fecha -->
            <div class="col-md-4">
                <label asp-for="Fecha" class="form-label"></label>
                <input asp-for="Fecha" type="date" class="form-control" />
            </div>

            <!-- Personas -->
            <div class="col-md-4">
                <label asp-for="NumPersonas" class="form-label"></label>
                <input asp-for="NumPersonas" class="form-control" />
            </div>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Confirmar Reserva</button>
        </div>
    </form>
</div>