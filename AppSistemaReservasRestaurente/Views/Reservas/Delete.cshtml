@model AppSistemaReservasRestaurente.Models.Reserva

@{
    ViewData["Title"] = "Eliminar Reserva";
}

<div class="gestion-panel">
    <h2 class="custom-title text-danger">Eliminar Reserva</h2>
    <p class="text-light">¿Está seguro que desea eliminar esta reserva?</p>

    <dl class="row formulario-contenedor mx-auto text-start text-light" style="max-width:600px;">
        <dt class="col-sm-4">Cliente</dt>
        <dd class="col-sm-8">@Model.Cliente?.Nombre_Cliente</dd>

        <dt class="col-sm-4">Mesa</dt>
        <dd class="col-sm-8">@Model.Mesa?.ID_Mesa</dd>

        <dt class="col-sm-4">Horario</dt>
        <dd class="col-sm-8">@Model.Horario?.Hora_Inicio.ToString("HH:mm")</dd>

        <dt class="col-sm-4">Fecha</dt>
        <dd class="col-sm-8">@Model.Fecha.ToShortDateString()</dd>

        <dt class="col-sm-4">Personas</dt>
        <dd class="col-sm-8">@Model.Cantidad_Personas</dd>

        <dt class="col-sm-4">Estado</dt>
        <dd class="col-sm-8">@Model.Estado</dd>
    </dl>

    <form asp-action="Delete" class="mt-3">
        <input type="hidden" asp-for="ID_Reserva" />
        <button type="submit" class="btn btn-danger me-2">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
