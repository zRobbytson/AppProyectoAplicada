@{
    ViewBag.Title = "Reservas Restaurante";
}

<div class="container-fluid bg-dark text-light min-vh-100">
    <div class="row">
        <!-- BARRA LATERAL -->
        <div class="col-lg-2 col-md-3 bg-black text-white min-vh-100 p-3 d-flex flex-column align-items-center">
            <!-- LOGO -->
            <div class="mb-4 text-center">
                <img src="~/images/logo.png" alt="Logo Restaurante" class="img-fluid mb-2 rounded-circle border border-light" style="max-width: 100px;">
                <h5 class="fw-bold">La Buena Mesa</h5>
            </div>

            <!-- ICONOS DE MENU -->
            <div class="d-flex flex-column gap-3 mt-3 w-100">
                <!-- Horarios -->
                <button class="btn btn-outline-light w-100 d-flex align-items-center justify-content-center toggle-panel" data-target="#panelHorarios">
                    <i class="bi bi-clock-history me-2"></i> Horarios
                </button>

                <!-- Buscar -->
                <button class="btn btn-outline-light w-100 d-flex align-items-center justify-content-center toggle-panel" data-target="#panelBuscar">
                    <i class="bi bi-search me-2"></i> Buscar
                </button>

                <!-- Confirmación -->
                <button class="btn btn-success w-100 d-flex align-items-center justify-content-center toggle-panel" data-target="#panelConfirmacion">
                    <i class="bi bi-check2-circle me-2"></i> Confirmación
                </button>
            </div>

            <!-- PANEL HORARIOS -->
            <div id="panelHorarios" class="bg-secondary text-light w-100 mt-3 p-3 rounded collapse">
                <h6 class="fw-bold">Horarios Disponibles</h6>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item bg-dark text-light">12:00 pm</li>
                    <li class="list-group-item bg-dark text-light">1:00 pm</li>
                    <li class="list-group-item bg-dark text-light">2:00 pm</li>
                    <li class="list-group-item bg-dark text-light">8:00 pm</li>
                </ul>
            </div>

            <!-- PANEL BUSCAR -->
            <div id="panelBuscar" class="bg-secondary text-light w-100 mt-3 p-3 rounded collapse">
                <h6 class="fw-bold">Consultar Reserva</h6>
                <select id="criterio" class="form-select mb-2">
                    <option value="mesa">Por mesa</option>
                    <option value="zona">Por zona</option>
                    <option value="apellido">Por apellido</option>
                </select>
                <input type="text" class="form-control mb-2" placeholder="Ingrese búsqueda">
                <button class="btn btn-light w-100">Buscar</button>
            </div>

            <!-- PANEL CONFIRMACIÓN -->
            <div id="panelConfirmacion" class="bg-secondary text-light w-100 mt-3 p-3 rounded collapse">
                <h6 class="fw-bold">Confirmación de Reserva</h6>
                <p><strong>Zona:</strong> <span id="resZona">-</span></p>
                <p><strong>Fecha:</strong> <span id="resFecha">-</span></p>
                <p><strong>Cantidad:</strong> <span id="resPersonas">-</span></p>
                <p><strong>Mesa:</strong> <span id="resMesa">-</span></p>
                <button id="btnConfirmarSidebar" class="btn btn-primary w-100">Confirmar y enviar correo</button>
            </div>
        </div>

        <!-- CONTENIDO PRINCIPAL -->
        <div class="col-lg-10 col-md-9 p-4">
            <h2 class="mb-4 fw-bold text-white">Reserva tu espacio</h2>

            <!-- FORMULARIO INICIAL -->
            <div class="card bg-secondary text-light shadow-sm mb-4">
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-4">
                            <label class="form-label fw-bold">Zona</label>
                            <select id="zona" class="form-select">
                                <option>Selecciona zona</option>
                                <option>Terraza</option>
                                <option>Salón Principal</option>
                                <option>Balcón</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label fw-bold">Cantidad de personas</label>
                            <input id="personas" type="number" class="form-control" placeholder="Ej: 4">
                        </div>
                        <div class="col-md-4">
                            <label class="form-label fw-bold">Fecha</label>
                            <input id="fecha" type="date" class="form-control">
                        </div>
                    </div>
                </div>
            </div>

            <!-- CROQUIS -->
            <div class="mb-4">
                <h5 class="fw-bold">Croquis del salón</h5>
                <img src="~/images/plano-zonas.png" class="img-fluid border rounded" alt="Plano del restaurante">
            </div>

            <!-- MESAS -->
            <div class="card bg-secondary text-light shadow-sm mb-4">
                <div class="card-body">
                    <h5 class="fw-bold mb-3">Selecciona tu mesa</h5>
                    <div class="d-flex flex-wrap gap-3">
                        <button class="btn p-0 border-0 mesa-btn" data-mesa="Mesa 1">
                            <img src="~/images/mesa1.png" class="img-thumbnail mesa-img" style="width:100px;" alt="Mesa 1">
                            <div class="text-center">Mesa 1</div>
                        </button>
                        <button class="btn p-0 border-0 mesa-btn" data-mesa="Mesa 2">
                            <img src="~/images/mesa2.png" class="img-thumbnail mesa-img" style="width:100px;" alt="Mesa 2">
                            <div class="text-center">Mesa 2</div>
                        </button>
                        <button class="btn p-0 border-0 mesa-btn" data-mesa="Mesa 3">
                            <img src="~/images/mesa3.png" class="img-thumbnail mesa-img" style="width:100px;" alt="Mesa 3">
                            <div class="text-center">Mesa 3</div>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- SCRIPT -->
<script>
    // Toggle panels (Horarios, Buscar, Confirmación)
    document.querySelectorAll(".toggle-panel").forEach(btn => {
        btn.addEventListener("click", function () {
            let target = document.querySelector(this.dataset.target);
            target.classList.toggle("show");
        });
    });

    // Selección de mesa
    let mesaSeleccionada = null;
    document.querySelectorAll(".mesa-btn").forEach(btn => {
        btn.addEventListener("click", function () {
            document.querySelectorAll(".mesa-img").forEach(img => img.classList.remove("border-primary", "border-3"));
            this.querySelector("img").classList.add("border-primary", "border-3");
            mesaSeleccionada = this.dataset.mesa;
            document.getElementById("resMesa").textContent = mesaSeleccionada;
        });
    });

    // Confirmación (botón del sidebar)
    document.getElementById("btnConfirmarSidebar").addEventListener("click", function () {
        let zona = document.getElementById("zona").value;
        let fecha = document.getElementById("fecha").value;
        let personas = document.getElementById("personas").value;

        document.getElementById("resZona").textContent = zona;
        document.getElementById("resFecha").textContent = fecha;
        document.getElementById("resPersonas").textContent = personas;

        if (zona && fecha && personas && mesaSeleccionada) {
            alert("✅ Reserva confirmada y correo enviado al cliente.");
        } else {
            alert("⚠️ Por favor, completa todos los campos antes de confirmar.");
        }
    });
</script>
